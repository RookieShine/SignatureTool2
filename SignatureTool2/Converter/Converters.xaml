<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:SignatureTool2.Converter">
    <local:BoolToObjectConverter x:Key="ConverterBoolToVisibility">
        <local:BoolToObjectConverter.TrueValue>
            Visible
        </local:BoolToObjectConverter.TrueValue>
        <local:BoolToObjectConverter.NullValue>
            Hidden
        </local:BoolToObjectConverter.NullValue>
        <local:BoolToObjectConverter.FalseValue>
            Collapsed
        </local:BoolToObjectConverter.FalseValue>
    </local:BoolToObjectConverter>

    <local:BoolToObjectConverter x:Key="ConverterBoolToVisibilityReversal">
        <local:BoolToObjectConverter.TrueValue>
            Collapsed
        </local:BoolToObjectConverter.TrueValue>
        <local:BoolToObjectConverter.NullValue>
            Hidden
        </local:BoolToObjectConverter.NullValue>
        <local:BoolToObjectConverter.FalseValue>
            Visible
        </local:BoolToObjectConverter.FalseValue>
    </local:BoolToObjectConverter>
</ResourceDictionary>